<HomeScreen>:
    name: 'home'
    
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: 1, 1, 1, 1
        
        MDTopAppBar:
            title: "KnowMe Mobile"
            elevation: 4
            pos_hint: {"top": 1}

        MDBoxLayout:
            orientation: 'vertical'
            padding: "20dp"
            spacing: "20dp"
            adaptive_height: True
            pos_hint: {"center_x": .5, "center_y": .5}

            MDIcon:
                icon: "robot"
                halign: "center"
                font_size: "64sp"
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color

            MDLabel:
                text: "Welcome to KnowMe Ecosystem"
                halign: "center"
                font_style: "H5"

            MDRaisedButton:
                text: "Create Profile"
                pos_hint: {"center_x": .5}
                size_hint_x: 0.8
                on_release: root.manager.current = 'profile_form'

            MDRaisedButton:
                text: "Chat NLP"
                pos_hint: {"center_x": .5}
                size_hint_x: 0.8
                md_bg_color: 0, 0.6, 0.6, 1
                on_release: root.manager.current = 'chat'
        
        Widget: # Spacer